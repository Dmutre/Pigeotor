<form action="/editProfile?_method=PUT" method="POST" enctype="multipart/form-data">
  <div>
    <label for="username">Username::</label>
    <input type="text" id="username" name="username" value="{{ profile.username }}" required>
  </div>
  <div>
    <label for="bio">Bio:</label>
    <br><textarea name="bio" id="bio" cols="30" rows="10" value="">{{ profile.bio }}</textarea>
  </div>
  <div>
    <label for="profilePicture">Profile Picture:</label>
    <input type="file" id="profilePicture" name="profilePicture" accept="image/*">
  </div>
  <button type="submit">Change</button>
</form>
<button><a href="/">Go to main menu</a></button>